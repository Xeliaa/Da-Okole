<append xpath="/recipes">

<!-- 4x4 Accessories Update Mod -->

<recipe name="vehicle4x4TruckAccessories" count="1" craft_time="120" craft_area="workbench" tags="perkGreaseMonkey,learnable,workbenchCrafting">
	<ingredient name="resourceHeadlight" count="8"/>
	<ingredient name="vehicleWheels" count="1"/>
	<ingredient name="Car Frame" count="1"/>
	<ingredient name="Car Axle" count="2"/>
	<ingredient name="Car Muffler" count="2"/>
	<effect_group>
		<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,3" value=".5,.5" tags="resourceMechanicalParts,resourceMetalPipe,resourceElectricParts,resourceSpring"/>
	</effect_group>
</recipe>
<!-- 4x4 Chassis Update Mod -->
<recipe name="vehicle4x4TruckChassis" count="1" craft_time="120" craft_area="workbench" tags="perkGreaseMonkey,learnable,workbenchCrafting">
	<ingredient name="Car Trunk" count="1"/>
	<ingredient name="Car Hood" count="1"/>
	<ingredient name="Car Door" count="2"/>
	<ingredient name="Car Seat" count="2"/>
	<ingredient name="Car Transmission" count="1"/>	
	<effect_group>
		<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,3" value=".5,.5" tags="resourceMechanicalParts,resourceMetalPipe,resourceElectricParts,resourceSpring"/>
	</effect_group>
</recipe>
<!-- Placeable Car Update -->
<recipe name="vehicle4x4TruckPlaceable" count="1" craft_time="300" craft_area="workbench" tags="workbenchCrafting">
	<ingredient name="Impact Wrench" count="1"/>
	<ingredient name="vehicle4x4TruckChassis" count="1"/>
	<ingredient name="vehicle4x4TruckAccessories" count="1"/>
	<ingredient name="smallEngine" count="1"/>
	<ingredient name="carBattery" count="1"/>
</recipe>
<!-- No impact -->
<recipe name="vehicle4x4TruckPlaceable" count="1" craft_time="1200" craft_area="workbench" tags="workbenchCrafting">
	<ingredient name="vehicle4x4TruckChassis" count="1"/>
	<ingredient name="vehicle4x4TruckAccessories" count="1"/>
	<ingredient name="smallEngine" count="1"/>
