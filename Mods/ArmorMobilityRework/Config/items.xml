<?xml version="1.0" encoding="utf-8"?>
<configs>

	<!--
		A18:	-	cloth armor no longer slows
				-	misc helmets now have protection values similar to base material helms, 
					so they need to be considered for tiers for balance otherwise there's no 
					point to using crafted tiers at all
				-	RNG stats
				
		MAX RNG ARMOR RATING
		Leather				11
		Scrap				10.4 
		Football/Mining		12		
		Military/ZU			13
		Iron/Firefighter	14
		Steel/Swat			16

		DEFAULT VALUES
		light armor: -.04 (24% set)
		heavy armor: -.06 (35% set)
		
		NEW VALUES BASED ON MATERIAL AND TIER
		Tier 1	-.02 	12% set		Leather, Mining Helm, Football Helm								
		Tier 2	-.04	24% set		Scrap		
		Tier 3	-.03	18% set		Military, ZU Football Helm	
		Tier 4	-.05	30% set		Iron, Firefighter Helm	
		Tier 5	-.06	36% set		Steel, Swat Helm 
	-->
		
		
	<!-- STANDARD ARMORS -->
	<set xpath="/items/item[contains(@name,'armorLeather')]/effect_group/passive_effect[@name='Mobility'][@value='-.04']/@value">-.02</set>
	<set xpath="/items/item[contains(@name,'armorScrap')]/effect_group/passive_effect[@name='Mobility'][@value='-.06']/@value">-.04</set>
	<set xpath="/items/item[contains(@name,'armorMilitary')]/effect_group/passive_effect[@name='Mobility'][@value='-.04']/@value">-.03</set>
	<set xpath="/items/item[contains(@name,'armorIron')]/effect_group/passive_effect[@name='Mobility'][@value='-.06']/@value">-.05</set>
	<set xpath="/items/item[contains(@name,'armorSteel')]/effect_group/passive_effect[@name='Mobility'][@value='-.06']/@value">-.06</set>
	
